@model FundoVM

@{
    ViewData["Title"] = "Detalhe do fundo de investimento";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <h4>Fundo de investimento</h4>
            <hr />
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("lblCodigo", "Código", new { @class = "form-control-label" })
                    @Html.TextBox("txtCodigo", Model.Codigo, new { @class = "form-control", @disabled = "disabled" })
                    @Html.HiddenFor(m => m.Codigo)
                </div>
                <div class="col-md-6">
                    @Html.Label("lblNome", "Nome", new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-2">
                    @Html.Label("lblCnpj", "Cnpj", new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.Cnpj, new { @class = "form-control cnpj", @disabled = "disabled" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    @Html.Label("lblTipo", "Tipo", new { @class = "form-control-label" })<br />
                    @Html.DropDownListFor(model => model.Tipo, ViewBag.ListTipo as List<SelectListItem>, "Tipo Investimento", new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
                <div class="col-md-3">
                    @Html.Label("lblPatrimonio", "Patrimônio", new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.Patrimonio, new { @class = "form-control decimal", @disabled = "disabled" })
                </div>
            </div>

            <div class="row" style="    margin-top: 20px;">
                <div class="col-md-offset-2 col-md-10">
                    <a href="@Url.Action("Index")" class="btn btn-primary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
}
